{
  "$schema": "https://modelcontextprotocol.io/schema/mcp-servers.json",
  "version": "1.0.0",
  "description": "MCP server integrations for claude-code-sync",
  "servers": {
    "github": {
      "name": "GitHub MCP",
      "description": "GitHub API integration for repository operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "capabilities": [
        "read_files",
        "write_files",
        "search_code",
        "manage_issues",
        "manage_prs"
      ],
      "priority": 1,
      "enabled": true
    },
    "filesystem": {
      "name": "Filesystem MCP",
      "description": "Local filesystem operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/Users/nick/Desktop/claude-code-sync"],
      "capabilities": [
        "read_files",
        "write_files",
        "list_directories",
        "watch_files"
      ],
      "priority": 2,
      "enabled": true
    },
    "git": {
      "name": "Git MCP",
      "description": "Git operations and repository management (via mcp-git package)",
      "transport": "stdio",
      "command": "uvx",
      "args": ["mcp-git"],
      "capabilities": [
        "git_status",
        "git_diff",
        "git_log",
        "git_commit",
        "git_branch"
      ],
      "priority": 3,
      "enabled": false,
      "note": "Requires uvx and mcp-git package"
    },
    "memory": {
      "name": "Memory MCP",
      "description": "Persistent memory and knowledge graph",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "capabilities": [
        "store_memory",
        "recall_memory",
        "knowledge_graph"
      ],
      "priority": 4,
      "enabled": true
    },
    "fetch": {
      "name": "Fetch MCP",
      "description": "HTTP/HTTPS fetch operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "capabilities": [
        "http_get",
        "http_post",
        "fetch_url"
      ],
      "priority": 5,
      "enabled": false,
      "note": "Not available in npm registry yet"
    },
    "puppeteer": {
      "name": "Puppeteer MCP",
      "description": "Browser automation and web scraping",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "capabilities": [
        "navigate",
        "screenshot",
        "evaluate_js",
        "click",
        "type"
      ],
      "priority": 6,
      "enabled": false
    },
    "postgres": {
      "name": "PostgreSQL MCP",
      "description": "PostgreSQL database operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_CONNECTION_STRING}"
      },
      "capabilities": [
        "query",
        "schema_introspection",
        "execute_sql"
      ],
      "priority": 7,
      "enabled": false
    },
    "sqlite": {
      "name": "SQLite MCP",
      "description": "SQLite database operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite"],
      "capabilities": [
        "query",
        "schema_introspection",
        "execute_sql"
      ],
      "priority": 8,
      "enabled": false
    },
    "time": {
      "name": "Time MCP",
      "description": "Time and timezone operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-time"],
      "capabilities": [
        "get_current_time",
        "convert_timezone",
        "format_time"
      ],
      "priority": 9,
      "enabled": false,
      "note": "Not available in npm registry yet"
    },
    "sequential-thinking": {
      "name": "Sequential Thinking MCP",
      "description": "Advanced reasoning and step-by-step problem solving",
      "transport": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "capabilities": [
        "step_by_step_reasoning",
        "problem_decomposition",
        "logical_analysis"
      ],
      "priority": 10,
      "enabled": true
    }
  },
  "transport_config": {
    "stdio": {
      "timeout_ms": 30000,
      "buffer_size": 8192,
      "encoding": "utf-8"
    },
    "sse": {
      "timeout_ms": 60000,
      "reconnect_interval_ms": 5000,
      "max_retries": 3
    }
  },
  "discovery": {
    "auto_discover": true,
    "discovery_paths": [
      "~/.config/mcp/servers",
      "/usr/local/share/mcp/servers"
    ]
  }
}
